<div class="dose-form-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://barmagazine.co.uk/wp-content/uploads/2020/08/cocktails.png')">
  <div class="dose-form-card">
    <h2>Add a new dose to the cocktail</h2>
    <div class="dose-form">
      <%= simple_form_for [@cocktail, @dose] do |f|%>
        <div class="form-inputs">
          <%= f.input :description %>
        </div>
        <div class="form-inputs">
          <%= f.association :ingredient %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-ghost"%>
        </div>
      <% end %>
    </div>
      <div class="form-links">
        <%= link_to 'Back', cocktails_path, class: "btn btn-ghost" %>
      </div>
  </div>

</div>

